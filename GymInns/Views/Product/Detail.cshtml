
@{
    @model GymInns.Models.Domain.Product
}

<div class="row mt-5">
    <div class="col">
        <img src="@Model.image" style="width:300px;"/>
    </div>
    <div class="col">
        <div class="row">
            <center>
                 <h2>@Model.name</h2>
            </center>
        </div>
        <div class="row">
            <center>
                 <div>@Model.description</div>
            </center>
        </div>
        <div class="row">
            <center>
                 <h3>Rp. @Model.price</h3>
            </center>
        </div>
        <div class="row">
            <center>
                <button class="btn btn-dark">Buy Now!</button>
            </center>
        </div>
    </div>
</div>