@model GymInns.Models.AddVUserViewModel
@{
}

<h1>Join Us Now!</h1>
<form method="post" action="Add">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="Password">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Plan</label>
        <select class="form-select" aria-label="Default select example" asp-for="Plan">
            <option value="Regular">Regular</option>
            <option value="Exclusive">Exclusive</option>
            <option value="VIP">VIP</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">DateJoin</label>
        <input type="date" class="form-control" asp-for="DateJoin">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">DateExpired</label>
        <input type="date" class="form-control" asp-for="DateExpired">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>